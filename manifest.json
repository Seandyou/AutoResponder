{
  "manifest_version": 3,
  "name": "AutoResponder - Local File Interceptor",
  "version": "1.0.0",
  "description": "Intercept network requests and respond with local files, similar to Fiddler's AutoResponder",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback",
    "storage",
    "activeTab",
    "tabs",
    "webRequest",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["intercepted/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
